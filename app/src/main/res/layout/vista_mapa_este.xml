<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_mapa_este"
    tools:context=".MapaEste">

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/boton_accion"
        android:id="@+id/botonIrAlSur"
        android:rotation="115"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="160dp"
        android:layout_marginStart="160dp"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/boton_accion"
        android:id="@+id/botonIrAlCentro"
        android:rotation="180"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/boton_instrucciones"
        android:id="@+id/botonInstruccion"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/boton_accion"
        android:id="@+id/botonIrAlNorte"
        android:rotation="240"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="160dp"
        android:layout_marginStart="160dp" />

    <Button
        android:layout_width="270dp"
        android:layout_height="210dp"
        android:background="@drawable/boton_actividad_esteban_museo"
        android:id="@+id/botonMuseoActividadEsteban"
        android:layout_below="@+id/botonIrAlNorte"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="120dp" />

</RelativeLayout>